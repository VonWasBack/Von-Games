{
    "version": 2,
    "builds": [
      {
        "src": "your-build-command",
        "use": "@vercel/static-build",
        "config": { "distDir": "public" }
      }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
